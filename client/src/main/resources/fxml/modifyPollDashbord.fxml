<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.tbee.javafx.scene.layout.fxml.MigPane?>
<?import javafx.geometry.Insets?>

<MigPane id="modifyPollDashbord" fx:controller="com.univtln.b00dle.client.controller.ModifyPollController"
         styleClass="main-panel"
         xmlns:fx="http://javafx.com/fxml">

   <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <top>
         <Label fx:id="namePoll" text="Nom du sondage" BorderPane.alignment="CENTER" />
      </top>
      <center>
         <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label text="Nom" />
                     <TextField />
                  </children>
               </HBox>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label text="Description" />
                     <TextField fx:id="PollDescriptionField"/>
                  </children>
               </HBox>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label text="Lieu" />
                     <TextField fx:id="PollPlaceField"/>
                  </children>
               </HBox>
               <TableView prefHeight="200.0" prefWidth="392.0">
                  <columns>
                     <TableColumn prefWidth="75.0" text="C1" />
                     <TableColumn prefWidth="75.0" text="C2" />
                  </columns>
               </TableView>
            </children>
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="131.0" text="Valider modifications">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </VBox>
      </center>
   </BorderPane>

</MigPane>